server default {
  listen {
    type = auth
    ipaddr = *
    port = 1812

    limit {
      max_connections = 0
      lifetime = 10
      idle_timeout = 30
    }
  }

  authorize {
    preprocess
    rewrite_calling_station_id
    authorized_macs

    if (EAP-Message) {
      eap
    } elsif (!EAP-Message && ok) {
      update control {
        Auth-Type := Accept
      }
    } else {
      reject
    }
  }

  authenticate {
    eap
  }

  post-auth {
    invoke_policy_engine
  }
}
